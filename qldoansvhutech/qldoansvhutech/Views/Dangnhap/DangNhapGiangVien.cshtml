
@{
    ViewBag.Title = "DangNhapGiangVien";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@using (Html.BeginForm())
{   
    <h1 style="color:red">@ViewBag.ThongBao</h1>
    @Html.AntiForgeryToken()
    <center style="margin-bottom:80px">
        <h2 style="margin-top:50px">ĐĂNG NHẬP GIẢNG VIÊN</h2>

        <table style="width:40%" class="table table-borderless">
            <tr>
                <td>Tên đăng nhập: </td>
            </tr>
            <tr>
                <td><input type="text" class="form-control" name="txtUsername" /></td>
            </tr>
            <tr>
                <td>Mật khẩu: </td>
            </tr>
            <tr>
                <td><input type="password" class="form-control" name="txtPassword" /></td>
            </tr>
        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đăng nhập" class="btn btn-danger" />
            </div>
        </div>
    </center>
}

