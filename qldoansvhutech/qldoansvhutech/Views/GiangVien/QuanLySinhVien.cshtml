@model IEnumerable<qldoansvhutech.Models.sinhvien>

@{
    ViewBag.Title = "QuanLySinhVien";
    Layout = "~/Views/Shared/LayoutGV.cshtml";
}
<a href="#">
    <span class="pull-left"><button class="btn btn-info btn-sm">Thêm mới</button></span>
</a>
<div class="col-xs-12">
    <div class="box"
        <div class="box-header">
            <div class="box-tools">
                <div class="input-group input-group-sm hidden-xs" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                    <div class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
<table class="table">
    <tr>
        <th>
            MSSV
        </th>
        <th>
            Họ và tên
        </th>
        <th>
            Email
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Mã Nhóm
        </th>
        <th>
            Tùy chọn
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <th>
        @Html.DisplayFor(modelItem => item.mssv)
    </th>
    <td>
        @Html.DisplayFor(modelItem => item.hoten)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.gioitinh)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.manhom)
    </td>
    <td>
        <a href="#" class="btn btn-info btn-sm" data-toggle="modal" data-target="#modal_edit_user_5"><i class="fa fa-pencil" aria-hidden="true"></i>Sửa</a>
        <a href="#" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#modal_edit_user_5"><i class="fa fa-trash-o" aria-hidden="true"></i>Xóa</a>
    </td>

</tr>
}

</table>
    </div>

